<div style="width: min-content;">
    <a href="/tv/<%= data.id %>">
        <div style="width: 200px; height: 300px; background-color: rgb(63, 63, 63);">
            <img src="<%= imageBaseUrl+'/w200'+data.poster_path %>" alt="">
        </div>
    </a>
    <div class="p-2">
        <h6 class="text-white mb-1">
            <%= data.name %>
        </h6>

        <small style="display: block;"class="fw-light text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="yellow" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg>
            <%= data.vote_average %> | 
            <%= data.first_air_date %>
        </small>
        <small class="fw-light text-white">
            <% for(var i = 0; i < data.genre_ids.length; i++){ %>
                <% if(i > 1) break %>

                <% for(var j = 0; j < tvGenres.length; j++){ %>
                    <% if (tvGenres[j].id == data.genre_ids[i]){ %>
                        <%= tvGenres[j].name %>&nbsp;
                    <% } %>
                <% } %>
            <% } %>
        </small>
    </div>
</div>