<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vizyon | Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        /* width */
        ::-webkit-scrollbar {
            width: 10px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #636363; 
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #dc3545; 
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #eb394b;
        }
    </style>
</head>
<body class="bg-dark d-flex flex-column min-vh-100">
    <%- include("../partials/navbar.ejs") %>

    <div class="container mb-5 mt-3">
        <h5 class="text-danger">Results</h5>
        <div class="row">
            <% results.forEach(result => { %>
                <div class="col my-3">
                    <% if(type == "Movie"){ %>
                        <%- include("../partials/movie-card.ejs", {data : result}) %>
                    <% }else if(type == "Tv Show"){ %>
                        <%- include("../partials/tv-card.ejs", {data : result}) %>
                    <% }else if(type == "Person") { %>
                        <%- include("../partials/person-card.ejs", {person : result}) %>
                    <% } %>
                </div>                
            <% }) %>
        </div>
    </div>

    <div class="mt-auto pt-5"><%- include("../partials/footer.ejs") %></div>
</body>
</html>